<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.na28.viewpagertest1.BikeCourse"
    android:orientation="vertical"
    android:background="@drawable/mainbackground"
    >
    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한강종주 자전거코스"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textColor="#fffff0"
            />

        <HorizontalScrollView
            android:id="@+id/horizontalscrollview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
        <ImageButton
            android:id="@+id/imagebutton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hanriver1"

            />
        </HorizontalScrollView>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남한강 자전거코스"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#fffff0"
                />

            <HorizontalScrollView
                android:id="@+id/horizontalscrollview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">
                <ImageButton
                    android:id="@+id/imagebutton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/southhanriver"

                    />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="북한강 자전거코스"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#fffff0"
                />

            <HorizontalScrollView
                android:id="@+id/horizontalscrollview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">
                <ImageButton
                    android:id="@+id/imagebutton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/northhavriver"

                    />
            </HorizontalScrollView>
        </LinearLayout>







    </ScrollView>
</LinearLayout>
