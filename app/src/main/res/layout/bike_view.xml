<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.na28.viewpagertest1.BikeView"
    android:background="@drawable/bikeview"
    >

    <ImageButton
        android:id="@+id/Bike"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:onClick="Bike"
        android:background="#00ff0000"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/BikeCourse"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BikeCourse"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:onClick="BikeCourse"
        android:background="#00ff0000"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/BikeRent"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/BikeRent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:onClick="BikeRent"
        android:background="#00ff0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
